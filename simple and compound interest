#include<stdio.h>
#include<math.h>
void main()
{
float p,r,t,a,si,ci;
printf("enter principle =");
scanf("%f",&p);
printf("enter rate =");
scanf("%f",&r);
printf("enter time =");
scanf("%f",&t);
si=(p*r*t)/100;
printf("simple interest =%f",si);
a=p*(pow((1+r/100),t));
ci=a-p;
printf("\n compound interest =%f",ci);
}

